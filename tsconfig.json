{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Typescript configuration",
  "extends": "@zemd/tsconfig/tsconfig-base.json",
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "./",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "include": ["**/**.ts"]
}
