{
  "name": "zemd-theme-dark-playground",
  "displayName": "zemd's Dark Theme from Playground",
  "description": "A Visual Studio Code theme for effective work",
  "version": "0.6.0",
  "type": "module",
  "engines": {
    "vscode": "^1.84.0",
    "node": ">=22"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "zemd",
    "dark"
  ],
  "contributes": {
    "themes": [
      {
        "label": "zemd Dark Theme Playground",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      }
    ]
  },
  "scripts": {
    "dev": "nodemon -e ts,json",
    "build": "bun src/index.ts",
    "vscode:prepublish": "bun run build",
    "package": "rm -rf ./build && mkdir ./build && vsce package -o ./build/zemd-vscode-theme.vsix",
    "publish": "vsce publish minor",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "author": "Dmytro Zelenetskyi <dmytro.zelenetskyi@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chroma-js": "^2.4.5",
    "@types/node": "^22.10.5",
    "@vscode/vsce": "^3.2.1",
    "@zemd/tsconfig": "^1.3.0",
    "chroma-js": "^3.1.2",
    "husky": "^9.1.7",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "style-dictionary": "^4.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zemd/vscode-theme-zemd.git"
  },
  "publisher": "zemd",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.json,.js",
    "ignore": [
      "src/generated/**"
    ],
    "exec": "bun ./src/index.ts"
  }
}
