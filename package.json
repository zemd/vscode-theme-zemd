{
  "name": "zemd-theme-dark",
  "displayName": "Onyx Dark Themes",
  "description": "A Visual Studio Code theme for effective work",
  "version": "0.7.1",
  "type": "module",
  "engines": {
    "vscode": "^1.84.0",
    "node": ">=25"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "zemd",
    "dark",
    "onyx"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Onyx Core",
        "uiTheme": "vs-dark",
        "path": "./themes/onyx-core.json"
      },
      {
        "label": "Onyx Ghost",
        "uiTheme": "vs-dark",
        "path": "./themes/onyx-ghost.json"
      }
    ]
  },
  "exports": {
    "./*": "./*"
  },
  "icon": "icon.png",
  "files": [
    "LICENSE",
    "icon.png",
    "themes/*",
    "assets/*.png"
  ],
  "scripts": {
    "dev": "nodemon -e ts,json",
    "build": "bun src/index.ts",
    "vscode:prepublish": "bun run build",
    "package": "rm -rf ./build && mkdir ./build && vsce package -o ./build/zemd-vscode-theme.vsix",
    "publish": "vsce publish minor",
    "publish:major": "vsce publish major",
    "publish:patch": "vsce publish patch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "lint": "eslint ."
  },
  "author": "Dmytro Zelenetskyi <dmytro.zelenetskyi@gmail.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/chroma-js": "^3.1.1",
    "@types/node": "^24.7.2",
    "@vscode/vsce": "^3.6.2",
    "@zemd/eslint-ts": "^1.0.37",
    "@zemd/tsconfig": "^1.5.0",
    "chroma-js": "^3.1.2",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "style-dictionary": "^5.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zemd/vscode-theme-zemd.git"
  },
  "publisher": "zemd",
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.json,.js",
    "ignore": [
      "src/generated/**"
    ],
    "exec": "node ./src/index.ts"
  }
}
